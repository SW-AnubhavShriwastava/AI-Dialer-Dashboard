generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas   = ["dashboard"]
}

// User Management
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  username      String    @unique
  password      String
  role          UserRole  @default(ADMIN)
  status        UserStatus @default(PENDING)
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relations
  adminSettings AdminSettings?
  adminEmployees Employee[] @relation("AdminEmployees")
  employeeProfile Employee? @relation("EmployeeProfile")
  campaigns     Campaign[]
  contacts      Contact[]

  @@schema("dashboard")
  @@map("users")
}

model AdminSettings {
  id              String    @id @default(cuid())
  adminId         String    @unique @map("admin_id")
  admin           User      @relation(fields: [adminId], references: [id], onDelete: Cascade)
  planType        String    @map("plan_type")
  availableCredits Int      @default(0) @map("available_credits")
  assignedNumber  String?   @map("assigned_number")
  features        Json      @default("{}")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  @@schema("dashboard")
  @@map("admin_settings")
}

model Employee {
  id          String    @id @default(cuid())
  adminId     String    @map("admin_id")
  userId      String    @unique @map("user_id")
  permissions Json      @default("{}")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  admin       User      @relation("AdminEmployees", fields: [adminId], references: [id], onDelete: Cascade)
  user        User      @relation("EmployeeProfile", fields: [userId], references: [id], onDelete: Cascade)
  campaigns   CampaignEmployee[]

  @@schema("dashboard")
  @@map("employees")
}

// Campaign Management
model Campaign {
  id          String    @id @default(cuid())
  name        String
  description String?
  adminId     String
  admin       User      @relation(fields: [adminId], references: [id], onDelete: Cascade)
  status      CampaignStatus @default(ACTIVE)
  startDate   DateTime?
  endDate     DateTime?
  settings    Json      @default("{}")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  employees   CampaignEmployee[]
  contacts    CampaignContact[]
  callLogs    CallLog[]
  appointments Appointment[]

  @@schema("dashboard")
  @@map("campaigns")
}

model CampaignEmployee {
  id          String    @id @default(cuid())
  campaignId  String    @map("campaign_id")
  campaign    Campaign  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  employeeId  String    @map("employee_id")
  employee    Employee  @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  permissions Json      @default("{}")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@unique([campaignId, employeeId])
  @@schema("dashboard")
  @@map("campaign_employees")
}

// Contact Management
model Contact {
  id          String    @id @default(cuid())
  adminId     String
  admin       User      @relation(fields: [adminId], references: [id], onDelete: Cascade)
  name        String
  phone       String
  email       String?
  tags        String[]  @default([])
  customFields Json     @default("{}")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // Relations
  campaigns   CampaignContact[]
  callLogs    CallLog[]
  appointments Appointment[]

  @@schema("dashboard")
  @@map("contacts")
}

model CampaignContact {
  id          String    @id @default(cuid())
  campaignId  String    @map("campaign_id")
  campaign    Campaign  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  contactId   String    @map("contact_id")
  contact     Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)
  status      ContactStatus @default(ACTIVE)
  callAttempts Int      @default(0) @map("call_attempts")
  lastCalled  DateTime? @map("last_called")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@unique([campaignId, contactId])
  @@schema("dashboard")
  @@map("campaign_contacts")
}

// Call Management
model CallLog {
  id          String    @id @default(cuid())
  campaignId  String    @map("campaign_id")
  campaign    Campaign  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  contactId   String    @map("contact_id")
  contact     Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)
  callSid     String    @unique @map("call_sid")
  status      String
  duration    Int?
  recordingUrl String?  @map("recording_url")
  transcriptId String?  @map("transcript_id")
  startedAt   DateTime? @map("started_at")
  endedAt     DateTime? @map("ended_at")
  createdAt   DateTime  @default(now()) @map("created_at")

  // Relations
  appointment Appointment?

  @@schema("dashboard")
  @@map("call_logs")
}

model Appointment {
  id          String    @id @default(cuid())
  campaignId  String    @map("campaign_id")
  campaign    Campaign  @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  contactId   String    @map("contact_id")
  contact     Contact   @relation(fields: [contactId], references: [id], onDelete: Cascade)
  callLogId   String?   @unique @map("call_log_id")
  callLog     CallLog?  @relation(fields: [callLogId], references: [id])
  title       String
  description String?
  appointmentTime DateTime @map("appointment_time")
  status      AppointmentStatus @default(SCHEDULED)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@schema("dashboard")
  @@map("appointments")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  EMPLOYEE

  @@schema("dashboard")
}

enum UserStatus {
  ACTIVE
  INACTIVE
  PENDING

  @@schema("dashboard")
}

enum CampaignStatus {
  ACTIVE
  PAUSED
  COMPLETED

  @@schema("dashboard")
}

enum ContactStatus {
  ACTIVE
  INACTIVE
  BLOCKED

  @@schema("dashboard")
}

enum AppointmentStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
  NO_SHOW

  @@schema("dashboard")
}
